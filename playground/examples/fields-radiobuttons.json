{
  "schema": {
    "language": {
      "type": "string",
      "title": "Best language",
      "enum": [ "JavaScript", "Python", "PHP", "Java", "C++", "other" ],
      "required": true
    },
    "favourite": {
      "type": "boolean",
      "title": "Is it your favourite?",
      "default": "true"
    }
  },
  "form": [
    {
      "key": "language",
      "type": "radiobuttons",
      "activeClass": "btn-success"
    },
    {
      "key": "favourite",
      "type": "radiobuttons",
      "activeClass": "btn-danger",
      "options": {
        "true": "Yes",
        "false": "No"
      }
    },
    {
      "type": "submit",
      "title": "Submit"
    }
  ],
  "defaultClasses": {
    "submitButtonClass": "btn btn-warning"
  }
}